{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AgentFlow",
  "version": "0.1.0",
  "identifier": "com.agentflow.desktop",
  "build": {
    "beforeDevCommand": "cd ../../apps/web && pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../../apps/web && pnpm build",
    "frontendDist": "../../apps/web/out"
  },
  "app": {
    "windows": [
      {
        "title": "AgentFlow",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": false
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "© 2026 AgentFlow Team",
    "category": "DeveloperTool",
    "shortDescription": "AI Agent 工作流平台",
    "longDescription": "AgentFlow 是一个本地优先、代码级可定制、社区驱动的 AI Agent 工作流平台",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": "downloadBootstrapper",
      "wix": {
        "language": {
          "en-US": {}
        }
      },
      "nsis": {
        "installMode": "currentUser",
        "compression": "lzma"
      }
    },
    "macOS": {
      "entitlements": "entitlements.plist",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "12.0",
      "dmg": {
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 220
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 220
        }
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "depends": [],
        "files": {}
      },
      "rpm": {
        "files": {},
        "release": "1"
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:agentflow.db"]
    },
    "fs": {
      "scope": {
        "allow": ["$APPDATA/**", "$HOME/.agentflow/**"],
        "deny": []
      }
    },
    "shell": {
      "open": true,
      "scope": []
    },
    "http": {
      "scope": ["http://**", "https://**"]
    },
    "notification": {
      "all": true
    },
    "updater": {
      "endpoints": [
        "https://releases.agentflow.dev/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": ""
    }
  }
}
