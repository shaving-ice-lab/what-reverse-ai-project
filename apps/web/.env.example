# 前端Run环境 (local/dev/staging/prod)
NEXT_PUBLIC_APP_ENV=dev

# API Address（Priority：API_URL > API_URL_{ENV}）
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_API_URL_DEV=http://localhost:8080/api/v1
NEXT_PUBLIC_API_URL_STAGING=https://staging-api.agentflow.ai/api/v1
NEXT_PUBLIC_API_URL_PROD=https://api.agentflow.ai/api/v1

# WebSocket Address（Priority：WS_URL > WS_URL_{ENV}）
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws
NEXT_PUBLIC_WS_URL_DEV=ws://localhost:8080/ws
NEXT_PUBLIC_WS_URL_STAGING=wss://staging-api.agentflow.ai/ws
NEXT_PUBLIC_WS_URL_PROD=wss://api.agentflow.ai/ws

# Runtime Base（Optional，Default由 API_BASE 推导）
NEXT_PUBLIC_RUNTIME_BASE_URL=

# OAuth Configuration (Optional)
NEXT_PUBLIC_GITHUB_CLIENT_ID=
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# 功能开关
NEXT_PUBLIC_ENABLE_LOCAL_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Feature flags（JSON or逗号分隔）
# NEXT_PUBLIC_FEATURE_FLAGS={"analytics":true,"local_mode":true}
# NEXT_PUBLIC_FEATURE_FLAGS=analytics,local_mode

# LLM Debug（Optional）
NEXT_PUBLIC_OPENAI_API_KEY=
