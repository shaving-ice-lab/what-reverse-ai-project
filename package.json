{
  "name": "agentflow",
  "version": "0.1.0",
  "private": true,
  "description": "AI Agent 工作流平台",
  "scripts": {
    "dev": "pnpm --filter @agentflow/web dev",
    "dev:web": "pnpm --filter @agentflow/web dev",
    "dev:desktop": "pnpm --filter @agentflow/desktop dev",
    "dev:server": "cd apps/server && go run cmd/server/main.go",
    "dev:server:hot": "cd apps/server && air",
    "build": "pnpm --filter @agentflow/web build",
    "build:web": "pnpm --filter @agentflow/web build",
    "build:desktop": "pnpm --filter @agentflow/desktop build",
    "build:server": "cd apps/server && go build -ldflags=\"-s -w\" -o bin/agentflow-server cmd/server/main.go",
    "lint": "pnpm --filter @agentflow/web lint",
    "lint:server": "cd apps/server && golangci-lint run",
    "test": "pnpm --filter @agentflow/web test",
    "test:server": "cd apps/server && go test -v ./..."
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "lint-staged": "^15.4.3"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/web/**/*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
