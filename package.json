{
  "name": "agentflow",
  "version": "0.1.0",
  "private": true,
  "description": "AI Agent 工作流平台",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@agentflow/web",
    "dev:server": "cd apps/server && go run cmd/server/main.go",
    "dev:server:hot": "cd apps/server && air",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@agentflow/web",
    "build:server": "cd apps/server && go build -ldflags=\"-s -w\" -o bin/agentflow-server cmd/server/main.go",
    "lint": "turbo run lint",
    "lint:web": "turbo run lint --filter=@agentflow/web",
    "lint:server": "cd apps/server && golangci-lint run",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:server": "cd apps/server && go test -v ./...",
    "typecheck": "turbo run typecheck",
    "analyze": "turbo run analyze",
    "clean": "turbo run clean",
    "ops:release-checklist": "node scripts/ops/release-checklist.mjs",
    "ops:alert-test": "node scripts/ops/alert-smoke.mjs",
    "ops:load-test": "node scripts/ops/runtime-load-test.mjs"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "lint-staged": "^15.4.3",
    "turbo": "^2.3.3"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/web/**/*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.29.2"
}
